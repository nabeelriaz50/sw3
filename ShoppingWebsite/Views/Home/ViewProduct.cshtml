@model ShoppingWebsite.Models.Product
@{
    ViewBag.Title = "ViewProduct";
}
<div class="container" style="min-height:550px ;">
    <center>
        <img width="200px" height="200px" src="~/Files/@Model.Picture" />
        <h4>Product Name: @Model.Name</h4>
        <h4>Price: $@Model.Price</h4>
        <a href="@Url.Action("AddToCart", "Home", new { ProductId = Model.Id})" class="btn btn-success"> Add To Cart</a>
    </center>

</div>



