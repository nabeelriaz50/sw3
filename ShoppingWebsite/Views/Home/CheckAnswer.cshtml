@model ShoppingWebsite.Models.User
@{
   <div class="container" style="min-height:550px;">
    @{
        if (Model == null)
        {
            <h1>Wrong Answer</h1>
        }
        else
        {
            using (Html.BeginForm("UpdatePassword", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <fieldset>
                    <legend>Secret Question</legend>
                    @Html.HiddenFor(model => model.UserId)
                    <div class="form-group">
                        <div class="editor-label">
                            <div class="control-label col-sm-2">
                                New Password
                            </div>
                        </div>
                        <div class="editor-field">
                            <div class="col-sm-10">
                                <input name="Password" type="password" id="Password" placeholder="Password" class="form-control" required />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-success">Submit</button>
                        </div>
                    </div>
                </fieldset>
            }
        }
     }
   </div>
}