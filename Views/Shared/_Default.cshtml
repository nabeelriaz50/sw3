<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Style.css" rel="stylesheet" />

</head>
<body>
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="~/Home/Index">ShoppingWebsite</a>
                </div>
                
                <div class="col-sm-5 col-lg-3 col-md-4 ">
                <form class="navbar-form" role="search" action="~/Home/UserSearch">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search" name="Query" id="Query">
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                    </div>
                </div>
                </form>
                </div>

                <div class="collapse navbar-collapse" id="myNavbar"> 
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="~/Home/Register"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
                        <li><a href="~/Home/Login"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                        <li><a href="~/Home/CheckCart"><span class="glyphicon glyphicon-shopping-cart"></span> Cart</a></li>
                        <li><a href="~/Home/CheckOut"> Check Out</a></li>

                    </ul>
                    </div>
            </div>
        </nav>
    
    @RenderBody()
    <div class="footer navbar-bottom" >
        <div class="panel panel-default">
            <div class="panel-footer">All Rights Reserved&copy;</div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>