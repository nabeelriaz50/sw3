@model ShoppingWebsite.Models.Product

@{
    ViewBag.Title = "AddItem";
}
<div class="container" style="min-height:550px ;">

    @using (Html.BeginForm("AddItem", "Home", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
    {

        <fieldset>
            <legend>Product Data</legend>
            <div class="form-group">
                <div class="editor-label">
                    @Html.LabelFor(model => model.Name, new { @class = "control-label col-sm-2" })
                </div>
                <div class="editor-field">
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "Name" })
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="editor-label">
                    @Html.LabelFor(model => model.Price, new { @class = "control-label col-sm-2" })
                </div>
                <div class="editor-field">
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Price, new { @class = "form-control", @placeholder = "Price" })
                        @Html.ValidationMessageFor(model => model.Price)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="editor-label">
                    @Html.LabelFor(model => model.Picture, new { @class = "control-label col-sm-2" })
                </div>
                <div class="editor-field">
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.Picture, new { type = "file", @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Picture)
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-success">Add</button>
                </div>
            </div>
        </fieldset>
    }

</div>